{
  "version": "0.0.188",
  "license": "MIT",
  "main": "dist/design-system.esm.js",
  "typings": "dist/index.d.ts",
  "packageManager": "yarn@1.22.19",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "chromatic": "chromatic --exit-zero-on-changes",
    "start": "tsdx watch --format esm --onSuccess 'yarn build-tailwind'",
    "build": "tsdx build --format esm && yarn build-tailwind",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./dist/tailwind.css --minify",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "release": "auto shipit"
  },
  "publishConfig": {
    "@zwirner:registry": "https://npm.pkg.github.com"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@zwirner/design-system",
  "author": "David Torres",
  "module": "dist/design-system.esm.js",
  "size-limit": [
    {
      "path": "dist/design-system.esm.js",
      "limit": "500 KB"
    }
  ],
  "devDependencies": {
    "@auto-it/jira": "^11.0.4",
    "@babel/core": "^7.23.3",
    "@size-limit/preset-small-lib": "^8.1.2",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@tailwindcss/container-queries": "^0.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^9.0.0",
    "auto": "^10.46.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.2",
    "babel-plugin-styled-components": "^2.0.7",
    "chromatic": "^6.17.0",
    "file-system-cache": "1.0.5",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^8.1.2",
    "styled-components": "^5.3.6",
    "tailwind": "^4.0.0",
    "tailwind-scrollbar": "^3.0.5",
    "tailwindcss": "^3.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^4.9.5",
    "typescript-styled-plugin": "^0.18.2"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.10",
    "@heroicons/react": "^2.0.15",
    "@portabletext/react": "^3.0.11",
    "@seznam/compose-react-refs": "^1.0.6",
    "@vime/core": "^5.4.1",
    "@vime/react": "^5.4.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "plyr-react": "^5.1.2",
    "react-drag-drop-files": "^2.3.10",
    "react-zoom-pan-pinch": "^3.3.0",
    "swiper": "9.3.1",
    "use-is-in-viewport": "^1.0.9",
    "uuid": "^9.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zwirner/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/Zwirner/design-system/issues"
  },
  "homepage": "https://github.com/Zwirner/design-system#readme",
  "description": "Fresh and cool React Design System for the David Zwirner digital products",
  "auto": {
    "plugins": [
      "npm"
    ]
  }
}
